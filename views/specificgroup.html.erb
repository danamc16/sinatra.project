<html>
<head>
	<link rel="stylesheet" type="text/css" href="style.css">
</head>

<body>
	<h1>
		<center><%= groupname %></center>
	</h1>

	<br>

	<form name="input" method="post" action="/<%= groupname %>">
		<label>Text yo Friends!</label>
		<br>
		Recipients: <br>

		<% groups[groupname].keys.each do |name| %>
		<INPUT TYPE=CHECKBOX NAME="checkbox" value='<%= name %>' checked><%= name %><BR>

		<% end %>
		Time of Arrival (EST): <input type="time" name="time">
		<br>
		Message: <input type="text" name="message" placeholder="Write your message here!">
		<br>
		
		<input type="submit" name="button" value="Send!">
	 		
	</form>

	<br>
<% if display %>
	<div id="history">
	Previous Text Messages for this Group: <br>
	<% texts[groupname].each do |value|%>
	<br>
		<div id="message">
		Recipients: <%= value[0] %>
		<br>
		Time of Arrival: <%= value[1] %>
		<br>
		Message: <%= value[2] %>
		</div>

	<% end %>
	</div>

<% end %>










</body>
	






</html>