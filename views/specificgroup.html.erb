<html>
<head>
	<link rel="stylesheet" type="text/css" href="style_group.css">
	<link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.5.0/pure-min.css">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.5.0/grids-responsive-min.css">
</head>

<body>

	<h1>
		<center><%= groupname %></center>
	</h1>

	<br>
<div class = "pure-g">
	<div class="pure-u-1-5" id="buttons">
		<form name="input" method="get" action="/">
			<input type="submit" name="button" value="Return to Groups">
		</form> 

		<form name="input" method="get" action="/<%= groupname %>/edit">
			<input type="submit" name="button" value="Edit Groups">
		</form>
	</div>

	<div class="pure-u-3-5" id="create_email">
		<form name="input" method="post" action="/<%= groupname %>" id = "usrform">
			<label>Email yo Friends!</label>
			<br>
			<div class="pure-g" id="logistics">
				<div class="pure-u-1-2">
					Recipients: <br>

					<% groups[groupname].keys.each_with_index do |name,i| %>
					<input type="checkbox" name="<%= name %>" checked><%= name %><BR>
					<% end %>
				</div>
				<div class="pure-u-1-2">
					Time of Arrival (EST): <input type="time" name="time" value="<%= Time.now.strftime("%H:%M") %>">
					<br>
					Date of Arrival: <input type="date" name="date" value="<%= Time.now.strftime("%Y-%m-%d") %>">
					<br>
					How often? <input type="text" name="frequency" cols = 40 placeholder = "10(s,m,h, or d)">
					<br>
					How many times? <input type="number" name="count" placeholder="Don't be pesky!">
				</div>
			</div>
			<br>
			Subject: <input type="text" name="subject" placeholder="Write your subject here!">
			<br>
			Message: <textarea name = "message" form = "usrform" placeholder="Write your message here!" rows=6 cols=60 ></textarea>
			<br>
			<input type="submit" name="button" value="Send!">
		 		
		</form>
	</div>

	<div class="pure-u-1-5" id="history">
		Previous Emails for this Group: <br>
		<% emails[groupname].each do |value|%>
			<br>
			<div id="message">
				Recipients: <%= value[0] %>
				<br>
				Time of Arrival: <%= value[1] %>
				<br>
				Date of Arrival: <%= value[2] %>
				<br>
				Subject: <%= value[3] %>
				<br>
				Message: <%= value[4] %>
			</div>

		<% end %>
	</div>








</div>

</body>
	






</html>