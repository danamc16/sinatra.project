<html>
<head>
	<link rel="stylesheet" type="text/css" href="style.css">
	<link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.5.0/pure-min.css">
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<link rel="stylesheet" href="http://yui.yahooapis.com/pure/0.5.0/grids-responsive-min.css">
	<link href='http://fonts.googleapis.com/css?family=Arimo' rel='stylesheet' type='text/css'>
</head>
</head>

<body>
<div class = "pure-g" id="elegant-aero">
	<div id="navbar" class="pure-u-1">
		Title goes here.
	</div>
	<div id="groupname" class="pure-u-1">
		<h1>
		<center><%= groupname %></center>
		</h1>
	</div>

	<div class="pure-u-1-5" id="buttons">
		<form name="input" method="get" action="/">
			<input type="submit" name="button" value="Return to Groups">
		</form> 

		<form name="input" method="get" action="/<%= groupname %>">
			<input type="submit" name="button" value="Return to <%= groupname %>">
		</form>
	</div>

	<div class="pure-u-3-5" id="edit_info">
		<form name="input" method="post" action="/<%= groupname %>/edit">
			<label><h2>Edit <%= groupname %></h2></label>
			<br>
			<label>
				Groupname:<input type="text" name="groupname_new" value="<%= groupname %>">
			</label>
			<br>
				Members:
				<br>
			
				<% groups[groupname].each do |name,email| %>
					<div class="pure-g">
						<div class="pure-u-1-2">
						<input type="text" name="<%= name %>" class= "<%= name %>" value="<%= name %>">
						</div>
					
						<div class="pure-u-1-2">
						<input type="text" name="<%= email %>" class="<%= email %>" value="<%= email %>">
						</div>
					</div>		
		
			
				<% end %>
			</label>
			<br>
			<input type="hidden" name="_method" value="put">	
				<input type="submit" name="button" value="Edit <%= groupname %>">

		</form>
		<form name="input" method="post" action="/<%= groupname %>/edit">

		<input type="hidden" name="_method" value="delete">	
				<input type="submit" name="button" value="Delete <%= groupname %>">
		 		
		</form>
	</div>

</div>

</body>
	
</html>